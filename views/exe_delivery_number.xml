<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_picking_inherit_delivery_number" model="ir.ui.view">
            <field name="name">stock.picking.view.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="delivery_number" string="Número de Remito"/>
                </xpath>

               
            </field>
        </record>
        <record id="stock_picking_list_inherit_delivery_number" model="ir.ui.view">
            <field name="name">stock.picking.list.inherit.delivery_number</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/> 
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='state']" position="after">
                    <field name="delivery_number" optional="show"/>
                </xpath>

            </field>
        </record>
        <record id="stock_picking_search_inherit_delivery_number" model="ir.ui.view">
    <field name="name">stock.picking.search.inherit.delivery_number</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_internal_search"/> 
    <field name="arch" type="xml">
        
        <xpath expr="//field[@name='name']" position="after">
            <field name="delivery_number" string="Número de Remito"/>
        </xpath>
        
        <xpath expr="//filter[@name='status']" position="after">
            <filter string="Número de Remito" 
                    name="groupby_delivery_number" 
                    domain="[]" 
                    context="{'group_by': 'delivery_number'}"/>
        </xpath>

    </field>
</record>
        
    </data>
</odoo>
 